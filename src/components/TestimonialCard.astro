---
export interface Props {
  stars?: number;
  quote: string;
  name: string;
  company: string;
}
const { stars = 5, quote, name, company } = Astro.props;
---

<div class="bg-white rounded-xl border border-gray-300 p-6 md:p-8 mb-6 md:mb-0 shadow-sm">
  <div class="mb-3 flex items-center gap-1">
    {Array.from({ length: stars }).map(() => (
      <svg class="w-6 h-6 text-orange-500 inline" fill="currentColor" viewBox="0 0 20 20">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.286 3.967a1 1 0 00.95.69h4.178c.969 0 1.371 1.24.588 1.81l-3.385 2.46a1 1 0 00-.364 1.118l1.287 3.966c.3.922-.755 1.688-1.54 1.118l-3.385-2.46a1 1 0 00-1.175 0l-3.385 2.46c-.784.57-1.838-.196-1.539-1.118l1.287-3.966a1 1 0 00-.364-1.118l-3.385-2.46c-.783-.57-.38-1.81.588-1.81h4.178a1 1 0 00.95-.69l1.286-3.967z"/>
      </svg>
    ))}
  </div>
  <blockquote class="italic text-lg text-gray-500 mb-4">"{quote}"</blockquote>
  <div class="font-bold text-gray-900 text-xl">{name}</div>
  <div class="text-gray-500 text-base">{company}</div>
</div>